@model VoteDto
@{
    Layout = "_SurveyLayout";
}
<img src="~/@Model.ImageUrl" class="card-img-top w-100 mb-5" alt="...">
<p>@Html.Raw(@Model.Question)</p>
<form asp-action="Survey">
    @{
        <input asp-for="UserId" hidden />
        <input asp-for="MultipleChoiceSurveyId" hidden />
        <table class="table table-striped w-100">
            <tr>
            @{
                
                foreach (Choice choice in Model.Choices)
                {
                    
                        <td class="w-25">
                            <div class="card mb-3" style="max-width: 540px;height:8rem;">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img src="~/@choice.ImageUrl" class="card-img-top h-100" alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <input class="form-check-input" type="radio" asp-for="SelectedChoice" value=@choice.Id />
                                            <label class="form-check-label" for="flexRadioDefault2">
                                                @choice.Text

                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    
                }
            }
            </tr>
        </table>

    }
    <div class="form-group">
        <input type="submit" value="ذخیره" class="btn btn-default" />
    </div>
</form>