@model TivPortal.ViewComponents.ModalViewComponent.ModalPath
<div class="modal fade show" id="staticBackdropLive" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLiveLabel" aria-modal="true" role="dialog" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLiveLabel">@Model.Title</h1>
                <a asp-action="CloseModal" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync($"{Model.Action}", Model.Model)
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show"></div>